{
    "name": "online-judge-extension",
    "displayName": "Online Judge Extension",
    "description": "VSCode extension for online-judge-tools",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "online-judge-extension.setup",
                "title": "Oje: Install necessary tools"
            },
            {
                "command": "online-judge-extension.createdir",
                "title": "Oje: Create New Contest Directory"
            },
            {
                "command": "online-judge-extension.login",
                "title": "Oje: Log in to the Service"
            },
            {
                "command": "online-judge-extension.update",
                "title": "Oje: Update Information"
            },
            {
                "command": "online-judge-extension.addproblem",
                "title": "Oje: Add Problem"
            },
            {
                "command": "online-judge-extension.submit",
                "title": "Oje: Submit Code",
                "icon": "$(cloud-upload)"
            },
            {
                "command": "online-judge-extension.bundle",
                "title": "Oje: Bundle C/C++ Headers",
                "icon": "$(folder-library)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "online-judge-extension.createdir",
                    "when": "editorHasSelection"
                },
                {
                    "command": "online-judge-extension.update",
                    "when": "editorHasSelection"
                },
                {
                    "command": "online-judge-extension.addproblem",
                    "when": "editorHasSelection"
                }
            ],
            "explorer/context": [
                {
                    "command": "online-judge-extension.createdir",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "online-judge-extension.update",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "online-judge-extension.addproblem",
                    "when": "explorerResourceIsFolder"
                }
            ],
            "editor/title": [
                {
                    "command": "online-judge-extension.submit",
                    "when": "editorLangId == cpp || editorLangId == python || editorLangId == java || editorLangId == rust || editorLangId == c || editorLangId == csharp",
                    "group": "navigation"
                },
                {
                    "command": "online-judge-extension.bundle",
                    "when": "editorLangId == cpp || editorLangId == c",
                    "group": "navigation"
                }
            ]
        },
        "configuration": [
            {
                "title": "online-judge-extension",
                "properties": {
                    "oje.templateFile": {
                        "type": "string",
                        "description": "Specify the path of the template program to be created with \"createdir\" command."
                    },
                    "oje.guessC++Latest": {
                        "type": "boolean",
                        "description": "Controls whether to use the latest C++ version during submission.",
                        "default": true
                    },
                    "oje.guessC++Compiler": {
                        "type": "string",
                        "enum": [
                            "GCC",
                            "Clang",
                            "All"
                        ],
                        "default": "GCC",
                        "description": "Controls which C++ compiler to use during submission."
                    },
                    "oje.guessPythonVersion": {
                        "type": "string",
                        "enum": [
                            "Python2",
                            "Python3",
                            "Auto",
                            "All"
                        ],
                        "default": "Python3",
                        "description": "Controls which Python version to use during submission."
                    },
                    "oje.guessPythonInterpreter": {
                        "type": "string",
                        "enum": [
                            "CPython",
                            "PyPy",
                            "All"
                        ],
                        "default": "PyPy",
                        "description": "Controls which Python Interpreter to use during submission."
                    },
                    "oje.includePath": {
                        "type": "array",
                        "description": "Specify include paths in \"bundle\" or \"submit\" command.",
                        "default": []
                    },
                    "oje.bundleBeforeSubmission": {
                        "type": "boolean",
                        "description": "Controls whether to bundle the file in \"submit\" command.",
                        "default": true
                    },
                    "oje.hidePath": {
                        "type": "boolean",
                        "description": "Controls whether to hide filepaths at `#line` directives in \"bundle\" or \"submit\" command.",
                        "default": true
                    },
                    "oje.eraseLineDirectives": {
                        "type": "boolean",
                        "description": "Controls whether to erase `#line` directives in \"bundle\" or \"submit\" command.",
                        "default": true
                    },
                    "oje.openBrowser": {
                        "type": "boolean",
                        "description": "Controls whether to open the result page in \"submit\" command.",
                        "default": true
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/copy-paste": "^1.1.33",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.87.0",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "@vscode/test-cli": "^0.0.6",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.56.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "copy-paste": "^1.5.3"
    }
}

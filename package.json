{
    "name": "online-judge-extension",
    "displayName": "Online Judge Extension",
    "description": "VSCode extension for online-judge-tools",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.87.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "online-judge-extension.setup",
                "title": "Oje: Install online-judge-tools"
            },
            {
                "command": "online-judge-extension.createdir",
                "title": "Oje: Create New Contest Directory"
            },
            {
                "command": "online-judge-extension.login",
                "title": "Oje: Log in to Service"
            },
            {
                "command": "online-judge-extension.update",
                "title": "Oje: Update Information"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "online-judge-extension.createdir",
                    "when": "editorHasSelection"
                },
                {
                    "command": "online-judge-extension.update",
                    "when": "editorHasSelection"
                }
            ],
            "explorer/context": [
                {
                    "command": "online-judge-extension.createdir",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "online-judge-extension.update",
                    "when": "explorerResourceIsFolder"
                }
            ]
        },
        "configuration": [
            {
                "title": "online-judge-extension",
                "properties": {
                    "oje.templateFile": {
                        "type": "string",
                        "description": "Specify the path of the template program to be created with the \"createdir\" command."
                    },
                    "oje.guessC++Latest": {
                        "type": "boolean",
                        "description": "Controls whether to use the latest C++ version during submission.",
                        "default": true
                    },
                    "oje.guessC++Compiler": {
                        "type": "string",
                        "enum": [
                            "GCC",
                            "Clang",
                            "All"
                        ],
                        "default": "GCC",
                        "description": "Controls which C++ compiler to use during submission."
                    },
                    "oje.guessPythonVersion": {
                        "type": "string",
                        "enum": [
                            "Python2",
                            "Python3",
                            "Auto",
                            "All"
                        ],
                        "default": "Auto",
                        "description": "Controls which Python version to use during submission."
                    },
                    "oje.guessPythonInterpreter": {
                        "type": "string",
                        "enum": [
                            "CPython",
                            "PyPy",
                            "All"
                        ],
                        "default": "CPython",
                        "description": "Controls which Python Interpreter to use during submission."
                    },
                    "oje.openBrowser": {
                        "type": "boolean",
                        "description": "Controls whether to open the result page after submission.",
                        "default": true
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.87.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3",
        "ts-loader": "^9.5.1",
        "webpack": "^5.90.3",
        "webpack-cli": "^5.1.4",
        "@vscode/test-cli": "^0.0.6",
        "@vscode/test-electron": "^2.3.9"
    }
}
